<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/icons</item>
    </style>

    <style name="Toolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
    </style>

    <style name="FAB">
        <item name="android:layout_width">@dimen/size_fab</item>
        <item name="android:layout_height">@dimen/size_fab</item>
        <item name="android:layout_margin">@dimen/margin_fab</item>
    </style>

    <style name="ProgressBarSpinning">
        <item name="android:layout_width">@dimen/size_progressbar</item>
        <item name="android:layout_height">@dimen/size_progressbar</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Primary">
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text.Secondary">
        <item name="android:textSize">@dimen/size_text_secondary</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/button_default</item>
    </style>

    <style name="DateInput">
        <item name="android:ems">@integer/mainlist_drawer_ems</item>
        <item name="android:inputType">date</item>
        <item name="android:focusable">false</item>
    </style>

    <style name="HyperLink">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/size_text_small</item>
    </style>

</resources>
