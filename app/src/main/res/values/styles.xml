<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/icons</item>
    </style>
    <style name="Toolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="background">@color/divider</item>
    </style>

    <style name="MainList" />
    <style name="MainList.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>
    <style name="MainList.Icon">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>
    <style name="MainList.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">88dp</item>
        <item name="android:paddingTop">16dp</item>
    </style>
    <style name="MainList.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="MainList.PrimaryText" parent="MainList.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MainList.SecondaryText" parent="MainList.Text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:lines">2</item>
    </style>
    <style name="MainList.FABAdd">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>

    <style name="EditList" />
    <style name="EditList.Item" parent="MainList.Item" />
    <style name="EditList.Icon">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="EditList.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>
    <style name="EditList.TextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="EditList.AppBarTextInputLayout" parent="EditList.TextInputLayout">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">72dp</item>
        <item name="android:layout_marginRight">72dp</item>
        <item name="android:layout_marginBottom">32dp</item>
    </style>
    <style name="EditList.AppBarTextField" parent="EditList.TextField">
        <item name="android:maxLines">1</item>
        <item name="android:nextFocusDown">@id/et_edit_item_description</item>
    </style>
    <style name="EditList.FABSave">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="ColorPicker" />
    <style name="ColorPicker.ColoredCircle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="ColorPicker.Favorite">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">15dp</item>
    </style>
    <style name="ColorPicker.Star">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
    <style name="ColorPicker.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
