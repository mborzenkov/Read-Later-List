<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@color/icons</item>
    </style>
    <style name="Toolbar" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/AppTheme.Toolbar</item>
    </style>

    <style name="MainList" />
    <style name="MainList.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_mainlist_list</item>
        <item name="android:paddingBottom">@dimen/padding_mainlist_list</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/height_divider</item>
    </style>
    <style name="MainList.Icon">
        <item name="android:layout_marginLeft">@dimen/marginleft_mainlist_icon</item>
        <item name="android:layout_width">@dimen/size_mainlist_icon</item>
        <item name="android:layout_height">@dimen/size_mainlist_icon</item>
    </style>
    <style name="MainList.Item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_mainlist_item</item>
        <item name="android:paddingTop">@dimen/paddingtop_mainlist_item</item>
    </style>
    <style name="MainList.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_marginLeft">@dimen/marginleft_mainlist_text</item>
        <item name="android:layout_marginRight">@dimen/marginright_mainlist_text</item>
    </style>
    <style name="MainList.PrimaryText" parent="MainList.Text">
        <item name="android:textSize">@dimen/textsize_mainlist_primarytext</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MainList.SecondaryText" parent="MainList.Text">
        <item name="android:textSize">@dimen/textsize_mainlist_secondarytext</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginBottom">@dimen/marginbottom_mainlist_secondarytext</item>
        <item name="android:lines">@integer/mainlist_textlines</item>
    </style>
    <style name="MainList.FABAdd">
        <item name="android:layout_width">@dimen/size_mainlist_fabadd</item>
        <item name="android:layout_height">@dimen/size_mainlist_fabadd</item>
        <item name="android:layout_margin">@dimen/margin_mainlist_fabadd</item>
        <item name="android:layout_gravity">bottom|end</item>
    </style>
    <!-- TODO: Drawer - стили по Material -->
    <style name="MainList.Hint"/>
    <style name="MainList.Drawer"/>
    <style name="MainList.Drawer.Layout">
        <item name="android:layout_width">@dimen/width_mainlist_drawer</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:background">@color/icons</item>
    </style>
    <style name="MainList.Drawer.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft_mainlist_drawer</item>
    </style>
    <style name="MainList.Drawer.Text.Title">
        <item name="android:layout_marginTop">@dimen/margintop_mainlist_drawer_title</item>
        <item name="android:text">@string/mainlist_drawer_title</item>
    </style>
    <style name="MainList.Drawer.Text.Label">
        <item name="android:layout_marginTop">@dimen/margintop_mainlist_drawer_text</item>
        <item name="android:layout_marginBottom">@dimen/marginbottom_mainlist_drawer_text</item>
    </style>
    <style name="MainList.Drawer.Text.Hint">
        <item name="android:layout_marginTop">@dimen/margintop_mainlist_drawer_hint</item>
    </style>
    <style name="MainList.Drawer.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft_mainlist_drawer</item>
        <item name="android:layout_marginRight">@dimen/marginright_mainlist_drawer</item>
        <item name="android:layout_marginTop">@dimen/margintop_mainlist_drawer_spinner</item>
    </style>
    <style name="MainList.Drawer.Spinner.Filter" />
    <style name="MainList.Drawer.DateInput">
        <item name="android:layout_width">@dimen/width_mainlist_drawer_dateinput</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft_mainlist_drawer</item>
        <item name="android:layout_marginRight">@dimen/marginright_mainlist_drawer</item>
        <item name="android:layout_marginTop">@dimen/margintop_mainlist_drawer_dateinput</item>
        <item name="android:ems">@integer/mainlist_drawer_ems</item>
        <item name="android:inputType">date</item>
        <item name="android:focusable">false</item>
    </style>
    <style name="MainList.Drawer.Favorite">
        <item name="android:layout_width">@dimen/size_mainlist_drawer_favoritecircle</item>
        <item name="android:layout_height">@dimen/size_mainlist_drawer_favoritecircle</item>
        <item name="android:layout_margin">@dimen/margin_mainlist_drawer_favoritecircle</item>
    </style>
    <style name="MainList.Drawer.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft_mainlist_drawer</item>
        <item name="android:layout_marginTop">@dimen/margintop_mainlist_drawer_button</item>
        <item name="android:background">@drawable/mainlist_drawer_button</item>
    </style>
    <style name="MainList.Drawer.Button.Sort"/>
    <style name="MainList.Drawer.Button.Save"/>
    <style name="MainList.Drawer.Button.Restore"/>
    <style name="MainList.Drawer.Button.Fill"/>
    <style name="MainList.Drawer.Button.Delete"/>


    <style name="EditItem" />
    <style name="EditItem.Item" parent="MainList.Item" />
    <style name="EditItem.Icon">
        <item name="android:layout_marginLeft">@dimen/marginleft_edititem_icon</item>
        <item name="android:layout_width">@dimen/size_edititem_icon</item>
        <item name="android:layout_height">@dimen/size_edititem_icon</item>
        <item name="android:contentDescription">@string/edititem_icon_contentdescription</item>
    </style>
    <style name="EditItem.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/marginleft_edititem_textinputlayout</item>
        <item name="android:layout_marginRight">@dimen/marginright_edititem_textinputlayout</item>
    </style>
    <style name="EditItem.TextField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/textsize_edititem_textfield</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:inputType">text</item>
    </style>
    <style name="EditItem.AppBarTextInputLayout" parent="EditItem.TextInputLayout">
        <item name="android:layout_marginTop">@dimen/margintopbottom_edititem_appbartextinputlayout</item>
        <item name="android:layout_marginLeft">@dimen/marginleftright_edititem_appbartextinputlayout</item>
        <item name="android:layout_marginRight">@dimen/marginleftright_edititem_appbartextinputlayout</item>
        <item name="android:layout_marginBottom">@dimen/margintopbottom_edititem_appbartextinputlayout</item>
    </style>
    <style name="EditItem.AppBarTextField" parent="EditItem.TextField">
        <item name="android:maxLines">@integer/edititem_headerlines</item>
        <item name="android:nextFocusDown">@id/et_edit_item_description</item>
        <item name="android:textColor">@color/icons</item>
    </style>
    <style name="EditItem.FABSave">
        <item name="android:layout_width">@dimen/size_edititem_fabsave</item>
        <item name="android:layout_height">@dimen/size_edititem_fabsave</item>
        <item name="android:layout_margin">@dimen/margin_edititem_fabsave</item>
    </style>

    <style name="ColorPicker" />
    <style name="ColorPicker.LinearLayoutFavorites">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">@dimen/marginTop_colorpicker_linearlayoutfavorites</item>
    </style>
    <style name="ColorPicker.ColoredCircle">
        <item name="android:layout_width">@dimen/size_colorpicker_coloredcircle</item>
        <item name="android:layout_height">@dimen/size_colorpicker_coloredcircle</item>
        <item name="android:layout_margin">@dimen/margin_colorpicker_coloredcircle</item>
    </style>
    <style name="ColorPicker.ColoredCircle.Chosen">
        <item name="android:onClick">clickOnChosenSquare</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginTop">@dimen/margintop_colorpicker_chosencircle</item>
    </style>
    <style name="ColorPicker.Favorite">
        <item name="android:layout_width">@dimen/size_colorpicker_favoritecircle</item>
        <item name="android:layout_height">@dimen/size_colorpicker_favoritecircle</item>
        <item name="android:layout_margin">@dimen/margin_colorpicker_favoritecircle</item>
    </style>
    <style name="ColorPicker.Star">
        <item name="android:layout_width">@dimen/size_colorpicker_star</item>
        <item name="android:layout_height">@dimen/size_colorpicker_star</item>
        <item name="android:layout_margin">@dimen/margin_colorpicker_star</item>
    </style>
    <style name="ColorPicker.Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/textsize_colorpicker_all</item>
    </style>
    <style name="ColorPicker.Text.Chosen">
        <item name="android:text">@string/colorpicker_chosen_label</item>
        <item name="android:layout_marginTop">@dimen/margintop_colorpicker_textchosen</item>
    </style>
    <style name="ColorPicker.Text.Favorites">
        <item name="android:text">@string/colorpicker_favorites_label</item>
        <item name="android:layout_marginTop">@dimen/margintop_colorpicker_textfavorites</item>
    </style>
    <style name="ColorPicker.Text.Label"/>
    <style name="ColorPicker.Text.Label.RGB">
        <item name="android:layout_marginTop">@dimen/margintop_colorpicker_textlabels</item>
        <item name="android:layout_marginRight">@dimen/margin_colorpicker_textlabels</item>
        <item name="android:text">@string/colorpicker_RGB</item>
    </style>
    <style name="ColorPicker.Text.Label.HSV">
        <item name="android:layout_marginTop">@dimen/margintop_colorpicker_textlabels</item>
        <item name="android:layout_marginLeft">@dimen/margin_colorpicker_textlabels</item>
        <item name="android:text">@string/colorpicker_HSV</item>
    </style>
    <style name="ColorPicker.Text.Value"/>
    <style name="ColorPicker.Text.Value.RGB">
        <item name="android:layout_marginTop">@dimen/margin_colorpicker_textvalues</item>
        <item name="android:layout_marginRight">@dimen/margin_colorpicker_textvalues</item>
    </style>
    <style name="ColorPicker.Text.Value.HSV">
        <item name="android:layout_marginTop">@dimen/margin_colorpicker_textvalues</item>
        <item name="android:layout_marginLeft">@dimen/margin_colorpicker_textvalues</item>
    </style>

</resources>
