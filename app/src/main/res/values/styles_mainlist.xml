<resources>

    <!-- Styles XML для MainList -->

    <style name="MainList"/>
    <style name="MainList.List">
        <item name="android:paddingTop">@dimen/padding_list_start</item>
        <item name="android:paddingBottom">@dimen/padding_list_start</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:dividerHeight">@dimen/height_divider</item>
    </style>
    <style name="MainList.FABAdd" parent="@style/FAB">
        <item name="android:layout_width">@dimen/size_fab</item>
        <item name="android:layout_height">@dimen/size_fab</item>

        <item name="android:layout_gravity">bottom|end</item>
    </style>
    <style name="MainList.Item">
        <item name="android:paddingTop">@dimen/paddingvertical_normal</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="MainList.Icon">
        <item name="android:background">@drawable/circle_default_inactive</item>
    </style>
    <style name="MainList.Label" parent="Text.Primary">
        <item name="android:textSize">@dimen/size_text_primary</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:singleLine">true</item>
    </style>
    <style name="MainList.Description" parent="Text.Secondary">
        <item name="android:textSize">@dimen/size_text_secondary</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:lines">@integer/mainlist_textlines</item>
    </style>
    <style name="MainList.Date" parent="MainList.Description">
        <item name="android:lines">1</item>
    </style>

    <style name="MainList.Drawer"/>
    <style name="MainList.Drawer.Layout">
        <item name="android:background">@color/light_background</item>
    </style>
    <style name="MainList.Drawer.FavoriteCircle">
        <item name="android:background">@drawable/circle_default</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
