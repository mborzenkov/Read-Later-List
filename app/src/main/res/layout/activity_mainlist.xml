<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout_mainlist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mborzenkov.readlaterlist.activity.MainListActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_main_list"
                style="@style/Toolbar"
                />

            <ListView
                android:id="@+id/listview_main_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="MainList.List"
                />

        </LinearLayout>

        <include layout="@layout/content_mainlist_empty"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_item_add"
            android:layout_gravity="bottom|end"
            app:srcCompat="@drawable/ic_add_24dp"
            style="@style/FAB"
            />

        <ProgressBar
            android:id="@+id/pb_main_loading"
            android:layout_gravity="center"
            android:visibility="invisible"
            style="@style/ProgressBarSpinning"
            />

    </FrameLayout>

    <include layout="@layout/drawer_mainlist"/>

</android.support.v4.widget.DrawerLayout>
