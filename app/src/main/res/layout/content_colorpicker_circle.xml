<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relaviteLayout_squares"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <ImageButton
        android:id="@+id/imageButton_colored_square"
        android:layout_width="@dimen/size_circle_huge"
        android:layout_height="@dimen/size_circle_huge"
        android:layout_margin="@dimen/margin_circle_huge"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription"
        style="@style/ColorPicker.ColoredCircle.Picker"
        />


</RelativeLayout>