<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.mborzenkov.readlaterlist.activity.EditItemActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_edit_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_edit_item"
            style="@style/Toolbar" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_edit_item_label"
            style="@style/EditItem.AppBarTextInputLayout"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_edit_item_label"
                style="@style/EditItem.AppBarTextField"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/edititem_label_hint" />

        </android.support.design.widget.TextInputLayout>

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_edititem" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_edit_item_save"
        style="@style/EditItem.FABSave"
        app:layout_anchor="@id/appbar_edit_item"
        app:layout_anchorGravity="bottom|end"
        app:srcCompat="@android:drawable/ic_menu_send" />

</android.support.design.widget.CoordinatorLayout>
