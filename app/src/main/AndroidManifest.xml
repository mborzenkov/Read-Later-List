<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mborzenkov.readlaterlist">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Activity со списком заметок -->
        <activity
            android:name=".activity.main.MainListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable_mainlist"/>
        </activity>

        <!-- Activity редактирования заметки -->
        <activity
            android:name=".activity.EditItemActivity"
            android:label="@string/title_activity_edit_item"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.main.MainListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mborzenkov.readlaterlist.activity.main.MainListActivity" />
        </activity>

        <!-- Activity для выбора цветов -->
        <activity android:name=".activity.ColorPickerActivity"
            android:label="@string/title_activity_colorpicker"
            android:launchMode="singleTop"
            android:parentActivityName=".activity.EditItemActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.mborzenkov.readlaterlist.activity.EditItemActivity" />
        </activity>

        <!-- ContentProvider для локальной базы данных заметок -->
        <provider
            android:name=".data.ReadLaterContentProvider"
            android:authorities="@string/content_authority"
            android:exported="false"/>

    </application>

</manifest>